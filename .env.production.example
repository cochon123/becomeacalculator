# Configuration O2Switch Production - PostgreSQL
# À utiliser avec: NODE_ENV=production

NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ===== BASE DE DONNÉES POSTGRESQL =====
DATABASE_TYPE=postgresql
# Format: postgresql://user:password@host:port/database
# Exemple O2Switch: postgresql://nocalc_user:password@localhost:5432/nocalculator
DATABASE_URL=postgresql://CHANGE_ME_USERNAME:CHANGE_ME_PASSWORD@localhost:5432/nocalculator

# ===== AUTHENTIFICATION =====
# Générer avec: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_KEY_openssl_rand_-base64_32
JWT_EXPIRY=7d

# ===== FRONTEND =====
FRONTEND_URL=https://CHANGE_ME_VOTRE_DOMAINE.com

# ===== LOGS =====
LOG_LEVEL=info
DEBUG=false
