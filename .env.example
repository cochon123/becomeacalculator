# ============================================
# NOCALCULATOR - Configuration d'environnement
# ============================================
# Copier ce fichier à .env et adapter les valeurs

# ============================================
# MODE ENVIRONNEMENT
# ============================================
NODE_ENV=development
# Valeurs: development, production

# ============================================
# SERVEUR
# ============================================
PORT=3001
HOST=0.0.0.0
# En production O2Switch: HOST et PORT sont générés automatiquement

# ============================================
# BASE DE DONNÉES
# ============================================

# Type de base (sqlite ou postgresql)
DATABASE_TYPE=sqlite
# Valeurs: sqlite, postgresql

# Pour SQLite (développement local)
DATABASE_PATH=./data/nocalculator.db

# Pour PostgreSQL (production O2Switch)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/nocalculator

# ============================================
# AUTHENTIFICATION
# ============================================

# JWT Secret (TRÈS IMPORTANT: générer une clé aléatoire forte en production)
# Générer avec: openssl rand -base64 32
JWT_SECRET=votre_secret_tres_aleatoire_et_securise_ici_minimum_32_caracteres

# JWT Expiration (optionnel)
JWT_EXPIRY=7d

# ============================================
# FRONTEND
# ============================================

# URL du frontend (pour CORS et redirects)
FRONTEND_URL=http://localhost:5173
# En production: https://votredomaine.com

# ============================================
# LOGS ET DEBUG
# ============================================

# Niveau de logs
LOG_LEVEL=info
# Valeurs: error, warn, info, debug

# Mode debug détaillé
DEBUG=false
